<h3 class="page-header">Available Experiments</h3>
<p>Welcome Admin {{name}}! Please select the lab of your interest to proceed.</p>

<div class="table-responsive col-md-8">
	<p><button type="button" class="btn btn-primary btn-sm pull-right" data-toggle="modal" data-target="#addExperiment">Add Experiment</button></p>
	<br><br>
	<div class="modal fade" id="addExperiment" role="dialog">
	    <div class="modal-dialog" role="document">
	        <div class="modal-content">
	        	<div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal">&times;</button>
			        <h4 class="modal-title">Add new Experiment</h4>
			     </div>
			     <div class="modal-body">
			     	<form role="form" method="POST" action="" enctype="multipart/form-data">
	                    <input type="hidden" name="action" value="add">
	                    <div class="form-group">
	                        <label>Title <small>Required</small></label>
	                        <input type="title" name="title" class="form-control" placeholder="Title" required autofocus>
	                    </div>
	                    <div class="form-group">
	                        <label>Category<small>Required</small></label>
	                        <input type="author" name="author" class="form-control" placeholder="Author" required>
	                    </div>
	                    <div class="form-group">
	                        <label>Data URL</label>
	                        <input type="publisher" name="publisher" class="form-control" placeholder="Publisher" required>
	                    </div>
	                    <button class="btn btn-sm btn-primary" type="submit">Add</button>
					s</form>
			     </div>
	        </div>
	    </div>
	</div>
	<table class="table table-striped table-bordered">
	  <thead>
	    <tr>
	      <th>#</th>
	      <th>Title</th>
	      <th>Category</th>
	    </tr>
	  </thead>
	  <tbody>
	  {{# each items }}
	    <tr>
	      <td>{{this.no}}</td>
	      <td><a href="lab/title/{{this.title}}">{{this.title}}</a></td>
	      <td>{{this.category}}</td>
	    </tr>
	    {{/each}}
	  </tbody>
	</table>
</div>
