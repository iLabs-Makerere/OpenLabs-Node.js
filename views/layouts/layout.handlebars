<!DOCTYPE html>
<html>
<head>
    <title>Open Laboratory</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css"/>
    <link rel="stylesheet" href="/stylesheets/style.css"/>
    
</head>
<body>
<div class="container-fluid">
    <div class="header clearfix">
        <nav id="main-navbar">
            <ul class="nav nav-pills pull-right">
                {{#if user}}
                    <li role="presentation"><a href="/">Dashboard</a></li>
                    <li role="presentation"><a href="/users/logout">Logout</a></li>
                {{else}}
                    <li role="presentation"><a href="/users/login">Login</a></li>
                    <li role="presentation"><a href="/users/register">Register</a></li>
                {{/if}}
            </ul>
        </nav>
        <h3 class="text-muted">Open Laboratory</h3>
    </div>


    <div class="row">
        <div class="col-lg-12">
            {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
            {{/if}}

            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}

            {{{body}}}
        </div>


    </div>

    <footer class="footer">
        <p>&copy; 2017 iLabs@MAK. </p>
    </footer>

</div> <!-- /container -->
    <script type="text/javascript" src="/javascripts/jquery.min.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/plotly-latest.min.js"></script>
    <script type="text/javascript" src="/javascripts/graphing.js"></script>
    <script type="text/javascript" src="/javascripts/graphing-windspeed.js"></script>
    <script type="text/javascript" src="/javascripts/scripts.js"></script>
</body>
</html>
